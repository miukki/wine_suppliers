{
  "name": "Country",
  "plural": "countries",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "code": {
      "type": "string",
      "required": true
    }
    
  },
  "validations": [],
  "relations": {
    "regions": {
      "type": "hasMany",
      "model": "Region",
      "foreignKey": "countryId"
    }
  },
  "acls": [],
  "methods": {
    "staticMethod": {
      "http": { "path": "/static" }
    },
    "prototype.instanceMethod": {
     "http": { "path": "/instance" }
    } 
  },
  "replaceOnPUT": true
}
